<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bcarbonesi.cineapp_atc">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_cine_app_vertical_cinza"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_cine_app_vertical_cinza_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Ui.Activities.DetalhesScrollingActivity"
            android:label="@string/title_activity_detalhes_scrolling"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Ui.Activities.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Ui.Activities.HomeActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".Ui.Activities.LoginActivity" />
    </application>

</manifest>